! $Id$ 

! Stuff that doesn't go anywhere else.
Xft*antialias:          true
! Process ~/.profile, if it exists.
XTerm*loginShell:       true
! Present meta-chars as single chars with 8th bit set
XTerm*eightBitInput:    true
! Send DEL instead of ^?
XTerm*deleteIsDEL:      false

! Cursor tweaks
XTerm*cursorBlink:      true
XTerm*cursorOffTime:    750
XTerm*cursorOnTime:     750

! Font stuff
XTerm*faceName:         Monospace
XTerm*faceSize:         10

! Hide the pointer when typing
XTerm*pointerMode:      1

! Scrollbar tweaks
!XTerm*scrollBar:        false
! Put the scrollbar on the right
XTerm*rightScrollBar:   true
! Scroll to the bottom when a key is pressed
XTerm*scrollKey:        true
! Don't scroll on output
XTerm*scrollTtyOutput:  false

! Color management
! These colors were taken from the Clearlooks-DeepSky
! gtk theme.
XTerm*color0:           #000000
XTerm*color1:           #cb0000
XTerm*color2:           #00cb00
XTerm*color3:           #cbcb00
XTerm*color4:           #1a8fff
XTerm*color5:           #cb00cb
XTerm*color6:           #00cbcb
XTerm*color7:           #e2e2e2
XTerm*color8:           #cccccc
XTerm*color9:           #ff0000
XTerm*color10:          #00ff00
XTerm*color11:          #ffff00
XTerm*color12:          #4581ae
XTerm*color13:          #ff00ff
XTerm*color14:          #00ffff
XTerm*color15:          #ffffff
