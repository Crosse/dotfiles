! Stuff that doesn't go anywhere else.
Xft*antialias:          true
! Process ~/.profile, if it exists.
XTerm*loginShell:       true
! Present meta-chars as single chars with 8th bit set
XTerm*eightBitInput:    true
! Send DEL instead of ^?
XTerm*deleteIsDEL:      false

! Cursor tweaks
XTerm*cursorBlink:      true
XTerm*cursorOffTime:    750
XTerm*cursorOnTime:     750

! Font stuff
XTerm*faceName:         Monospace
XTerm*faceSize:         10

! Hide the pointer when typing
XTerm*pointerMode:      1

! Scrollbar tweaks
!XTerm*scrollBar:        false
! Put the scrollbar on the right
XTerm*rightScrollBar:   true
! Scroll to the bottom when a key is pressed
XTerm*scrollKey:        true
! Don't scroll on output
XTerm*scrollTtyOutput:  false

! Color management
! These colors were taken from the Clearlooks-DeepSky
! gtk theme.
XTerm*foreground:       #cccccc
XTerm*background:       #000000
XTerm*color0:           #000000
XTerm*color1:           #cb0000
XTerm*color2:           #00cb00
XTerm*color3:           #cbcb00
XTerm*color4:           #1a8fff
XTerm*color5:           #cb00cb
XTerm*color6:           #00cbcb
XTerm*color7:           #e2e2e2
XTerm*color8:           #cccccc
XTerm*color9:           #ff0000
XTerm*color10:          #00ff00
XTerm*color11:          #ffff00
XTerm*color12:          #4581ae
XTerm*color13:          #ff00ff
XTerm*color14:          #00ffff
XTerm*color15:          #ffffff

! xidle config
! How long to wait before running the program when the pointer is placed
! in the hot-corner
XIdle.Delay:            5
! The hot-corner
XIdle.Position:         sw
! The program to run
XIdle.Program:          xlock
! How long to wait before running the Program
XIdle.Timeout:          900

! XLock config
! Delay 30 seconds before requiring a password
XLock.lockdelay:        30
! The screensaver to use
XLock.mode:             fzort
! Show when you're typing
XLock.echokeys:         on
! Print *'s instead of ?'s
XLock.echokey:          *
! Suspend the monitor after 10 minutes
XLock.dpmssuspend:      600
