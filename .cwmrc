# ~/.cwmrc
# $Id$
#

# Keybindings
bind C-Up       unmap
bind C-Down     unmap
bind C-Left     unmap
bind C-Right    unmap
bind M-Left     unmap
bind M-Right    unmap
bind CM-Right   cyclegroup
bind CM-Left    rcyclegroup
bind 4-r        "dmenu_run"
bind 4-l        lock

# Autogroup definitions
autogroup 1     "xterm,XTerm"
autogroup 1     "gnome-terminal,Gnome-terminal"
autogroup 2     "Navigator,Firefox"
autogroup 3     "Pidgin,Pidgin"

# Make new windows part of the currently active group by default
sticky yes

# Menu entries
command firefox "firefox35"
command lock    "xscreensaver-command -l"
