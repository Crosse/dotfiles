#!/usr/bin/env bash

battery_status() {
    declare -a batteries
    mapfile -t batteries < <(ls -d /sys/class/power_supply/BAT*)

    for b in "${batteries[@]}"; do
        . "${b}/uevent"
        if [ "${#batteries[@]}" -gt 1 ]; then
            local batt=$(basename "$b")
            printf "[%s] %d%% (%s)\n"   \
                $batt                   \
                $POWER_SUPPLY_CAPACITY  \
                $POWER_SUPPLY_STATUS
        else
            printf "%d%%, %s\n"         \
                $POWER_SUPPLY_CAPACITY  \
                $POWER_SUPPLY_STATUS
        fi
    done
}
battery_status
