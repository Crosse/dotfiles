# vim: set ft=sh:

# Only for interactive shells.
[[ "${-}" != *i* ]] && return

# And only if npm is installed.
[[ -x "$(command -v npm)" ]] || return

# Append npm's bin path to $PATH.
# The "proper" way takes more time than I'm willing to wait.
#append_to_path $(npm bin)

append_to_path "${HOME}/node_modules/.bin"
