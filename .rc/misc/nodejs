# vim: set ft=sh:

# Only for interactive shells.
[[ "${-}" != *i* ]] && return

NVM_DIR="$(realpath "$XDG_CONFIG_HOME"/nvm)"
if [[ -d $NVM_DIR && -r ${NVM_DIR}/nvm.sh ]]; then
    export NVM_DIR
    . "${NVM_DIR}"/nvm.sh
else
    unset NVM_DIR
fi

# And only if npm is installed.
[[ -x "$(command -v npm)" ]] || return

