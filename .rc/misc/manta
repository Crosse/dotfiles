# Only for interactive shells.
[[ "${-}" == *i* ]] && return

# No need to do anything if the Manta CLI isn't installed.
if [ $(command -v mjob) ]; then
    export MANTA_URL=https://us-east.manta.joyent.com
    export MANTA_USER=crosse3

    # Get the MD5 fingerprint for the default RSA SSH key.
    MANTA_KEY_ID=$(ssh-keygen -E md5 -lf ~/.ssh/id_rsa.pub)
    MANTA_KEY_ID=${MANTA_KEY_ID##* MD5:}; MANTA_KEY_ID=${MANTA_KEY_ID%% *}
    export MANTA_KEY_ID
fi
