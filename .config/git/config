# vim: set ft=gitconfig ts=4 sw=4 et:

[include]
    path = identities
    path = aliases
    path = colors
    path = ~/.gitconfig.extra

[advice]
    detachedHead = false

[diff]
    compactionHeuristic = true
    color = auto
    algorithm = patience
    colorMoved = default

[help]
    format = man

[push]
    default = simple

[commit]
    gpgsign = true

[gui]
    fontdiff = -family \"Liberation Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    diffopts = --patience
    fontui = -family \"Liberation Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0

[pull]
    rebase = true

[core]
    excludesfile = ~/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    light = true
    syntax-theme = GitHub
    line-numbers = true
    commit-style = blue
    commit-decoration-style = green

[init]
    defaultBranch = main

[url "git@github.com:"]
    insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
