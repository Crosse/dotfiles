# vim: set ft=gitconfig ts=4 sw=4 et:

[include]
    path = identities
    path = aliases
    path = colors
    path = ~/.gitconfig.extra

[advice]
    detachedHead = false

[diff]
    compactionHeuristic = true
    color = auto
    algorithm = patience
    colorMoved = default

[help]
    format = man

[push]
    default = simple

[gpg]
    # git uses gpg by default. Tell it to use gpg2 instead.
    program = gpg2

[gui]
    fontdiff = -family \"Liberation Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    diffopts = --patience
    fontui = -family \"Liberation Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0

[pull]
rebase = true

[core]
    excludesfile = ~/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    light = true
    syntax-theme = GitHub
    line-numbers = true
    commit-style = blue
    commit-decoration-style = green

[url "git@github.com:"]
    # Allows "git checkout github:user/repo.git"
    insteadOf = github:

[url "git@bitbucket.org:"]
    # Allows "git checkout bb:user/repo.git"
    insteadOf = bb:
[credential]
	helper = osxkeychain
[pull]
	rebase = true
[init]
	defaultBranch = main
